if message
  h2= message


form(method='POST', action='/register')
  .input-group
    label(for='email') Email
    input#email(type='email', name='email', placeholder='email@email.com', required, value=email)
  .input-group
    label(for='pass') Password
    input#pass(type='password' name='password', placeholder='password goes here', required)

  .input-group
    label(for='verify') Retype Password
    input#verify(type='password' name='verify', placeholder='retype password here', required)

  .input-group
    input(type='submit', value='Sign up!')
