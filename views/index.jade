each msgs, type in messages
  for msg in msgs
    p(class=type)= msg

if user
  h1 Hello #{user.email}

  form(action='/login?_method=delete', method='POST')
    input(type='submit', value='Logout')
else
  h1 Hello Stranger

  form(action='/login', method='GET')
    input(type='submit', value='Login')
